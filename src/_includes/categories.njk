---
layout: "base.njk"
pagination:
  data: collections.categories
  size: 1
  alias: category
permalink: "/categories/{{ category.slug }}/"
---

<h1 class="text-2xl font-bold mb-4">{{ category.name }}</h1>
<ul class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
  {% for tool in category.items %}
    <li class="p-4 bg-white rounded shadow">
      <a class="text-lg font-semibold" href="{{ tool.url }}">{{ tool.data.title }}</a>
      <p class="text-sm text-gray-600 mt-2">{{ tool.templateContent | excerpt(120) }}</p>
    </li>
  {% endfor %}
</ul>
