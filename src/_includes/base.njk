<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{ title or pageTitle }} – Tooleble</title>
    <meta name="description" content="{{ description or subHeading }}" />
    <link rel="canonical" href="{{ site.baseUrl }}{{ page.url }}" />
    <meta name="robots" content="index,follow,max-snippet:-1,max-image-preview:large" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Tooleble" />
    <meta property="og:title" content="{{ title or pageTitle }} – Tooleble" />
    <meta property="og:description" content="{{ description or subHeading }}" />
    <meta property="og:url" content="{{ site.baseUrl }}{{ page.url }}" />
    {% if ogImage %}
      <meta property="og:image" content="{{ ogImage }}" />
    {% endif %}

    <link rel="icon" sizes="180x180" href="/assets/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

<link rel="stylesheet" href="{{site.baseUrl}}styles/output.css">


    {# Breadcrumb Schema #}
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "{{ site.baseUrl }}/"
          }
          {% if categoryTitle %}
          ,{
            "@type": "ListItem",
            "position": 2,
            "name": "{{ categoryTitle }}",
            "item": "{{ site.baseUrl }}{{ categoryUrl }}"
          }
          {% endif %}
          ,{
            "@type": "ListItem",
            "position": {% if categoryTitle %}3{% else %}2{% endif %},
            "name": "{{ pageTitle }}",
            "item": "{{ site.baseUrl }}{{ page.url }}"
          }
        ]
      }
    </script>

    {# Tool Schema #}
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "{{ title or pageTitle }}",
        "applicationCategory": "Utility",
        "operatingSystem": "Any",
        "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
        "url": "{{ site.baseUrl }}{{ page.url }}",
        "description": "{{ description or subHeading }}"
      }
    </script>
  </head>
  <body class="font-roboto bg-gray-300 text-gray-900 min-h-screen">
    {% include "header.njk" %}

    <nav class="breadcrumbs text-sm px-4 py-2 bg-gray-100" aria-label="Breadcrumb">
      <a href="{{ site.baseUrl }}/" class="text-blue-600 hover:underline">Home</a>
      {% if categoryTitle %}
        › <a href="{{ site.baseUrl }}{{ categoryUrl }}" class="text-blue-600 hover:underline">{{ categoryTitle }}</a>
      {% endif %}
      › <span>{{ pageTitle }}</span>
    </nav>

    <main class="container max-w-4xl mx-auto px-4 py-8">
      <header class="text-center mb-8">
        <h1 class="text-3xl font-bold mb-2">{{ pageTitle }}</h1>
        {% if description %}
          <p class="text-lg text-gray-700">{{ description }}</p>
        {% endif %}
      </header>

      {{ content | safe }}
    </main>

    {% include "footer.njk" %}
  </body>
</html>
